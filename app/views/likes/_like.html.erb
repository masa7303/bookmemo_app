<i id="<%= comment.id %>" class="far fa-heart unlike"></i>

<script type="text/javascript">
  $(function(){
    $.ajax({
    url: "/likes/<%= comment.id %>",
    type:'POST',
    success: function(data){
      console.log(data)
      if (data){
        $("#<%= comment.id %>").removeClass('far fa-heart unlike');
        $("#<%= comment.id %>").addClass('fas fa-heart like');
      }
    }
    });
  })

  $(function(){
    $("#<%= comment.id %>").on('click',function(){
      $.ajax({
      url: "/likes/<%= comment.id %>/like",
      type:'POST',
      success: function(data){
        console.log(data)
        if($("#<%= comment.id %>").hasClass('unlike') && data){
          $("#<%= comment.id %>").removeClass('far fa-heart unlike');
          $("#<%= comment.id %>").addClass('fas fa-heart like');
        }else{
          $("#<%= comment.id %>").removeClass('fas fa-heart like');
          $("#<%= comment.id %>").addClass('far fa-heart unlike');
        }
      }
    });
  });
  });
</script>
