<i id="<%= comment.id %>" class="fa fa-heart-o unlike"></i>

<script type="text/javascript">
  $(function(){
    $("#<%= comment.id %>")
      $ajax({
      url: "/likes/likes?",
      type: 'POST',

      })
  })

  $(function(){
    $("#<%= comment.id %>").on('click',function(){
      $.ajax({
      url: "/likes/<%= comment.id %>",
      type:'POST',
      success: function(data){
        if($("#<%= comment.id %>").hasClass('unlike')){
          $("#<%= comment.id %>").removeClass('fa-heart-o unlike');
          $("#<%= comment.id %>").addClass('fa-heart like');
        }else{
          $("#<%= comment.id %>").removeClass('fa-heart like');
          $("#<%= comment.id %>").addClass('fa-heart-o unlike');
        }
      }
    });
  });
  });
</script>
