<div class="container text-center">
  <% if @comments1.present? %>
    <h2 class="bg-secondary text-white d-block py-2">今日</h2>
    <% @comments1.each do |comment| %>
      <div class="comment-content"><%= comment.body %></div>
      <p class="source">
        <% if comment.book_id.present? %>
          <%= comment.book_id %>
        <% end %>
      </p>
    <% end %>
  <% end %>

  <% if @comments2.present? %>
    <h2 class="bg-secondary text-white d-block py-2">１日前</h2>
