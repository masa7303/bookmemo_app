<div class="header_box">
  <%= image_tag "/images/book_shelf.jpg", class: "header_bg_img", alt: "" %>
  <div class="header_ttl text-center">
    <h1 class="header_ttl_ja">文章</h1>
    <p class="header_ttl_en">SENTENCES</p>
  </div>
</div>

<div class="container text-center">
  <% if @comments.present? %>
    <h2 class="bg-secondary text-white d-block py-2">登録した文章</h2>
    <% @comments.each do |comment| %>
      <div class="comment-content"><%= comment.body %></div>
      <p class="source">(<%= comment.book_title %>)</p>
    <% end %>
  <% end %>

  <% if @comments1.present? %>
    <h2 class="bg-secondary text-white d-block py-2">今日</h2>
    <% @comments1.each do |comment| %>
      <div class="comment-content"><%= comment.body %></div>
      <p class="source">(<%= comment.book_title %>)</p>
    <% end %>
