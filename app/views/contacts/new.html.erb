<div class="container">
  <%= form_for @contact do |f| %>

    <div class="form-group row justify-content-center mt-sm-3">
      <%= f.label :email, '返信先メールアドレス', class: "d-flex align-items-center col-sm-3" %>
      <%= f.text_field :email, class: 'form-control col-sm-5' %>
    </div>

   <div class="form-group row justify-content-center">
     <%= f.label :message, 'お問い合わせ内容', class: 'd-flex align-items-center col-sm-3' %>
     <%= f.text_area :message, size: '10x10', class: 'form-control col-sm-5' %>
   </div>

   <div class="row">
   <%= f.submit '送信', class: 'btn btn-primary mx-auto mb-sm-3 d-block' %>
   </div>

  <% end %>
</div>
